{
    "hosting": {
        "public": "build",
        "site": "passment",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "rewrites": [
            {
                "source": "/*",
                "destination": "/index.html"
            }
        ],
        "headers": [
            {
                "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
                "headers": [
                    {
                        "key": "Access-Control-Allow-Origin",
                        "value": "*"
                    },
                    {
                        "key": "Content-Encoding",
                        "value": "gzip"
                    }
                ]
            },
            {
                "source": "**/*.@(jpg|jpeg|gif|png)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=7200"
                    },
                    {
                        "key": "Content-Encoding",
                        "value": "gzip"
                    }
                ]
            },
            {
                "source": "**/*.@(js|css)",
                "headers": [
                    {
                        "key": "Content-Encoding",
                        "value": "gzip"
                    }
                ]
            }
        ]
    }
}
